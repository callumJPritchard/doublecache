{
    "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2018",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationMap": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }